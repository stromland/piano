{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Import */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": ["**/*.test.ts", "lib"]
}
